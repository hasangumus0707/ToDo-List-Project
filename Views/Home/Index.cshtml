@model ToDoList.Models.TodoViewModel
<div class="row justify-content-center">
<div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
<div class="table-responsive">
<table class="table table-hover"> 
    <thead>
        <tr class="table-primary">
            <th scope="col" style="width: 10%;">Id</th>
            <th scope="col" style="width: 60%;">Name</th>
            <th scope="col" style="width: 30%;">Actions</th>
        </tr>
    </thead>
    <tbody> 
        @foreach (var t in Model.TodoList)
        {
            <tr>
                <td class="todos-column" scope="row">@t.Id</td>
                <td class="todos-column text-break">@t.Name</td>
                <td class="buttons-column">
                    <input class="btn btn-danger btn-sm" type="submit" value="Delete" onclick="deleteTodo(@(t.Id))">
                    <input class="btn btn-primary btn-sm" type="submit" value="Update" onclick="populateForm(@(t.Id))">
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
</div>